<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.remi.sugarmole.HeatingActivity"
    android:background="@color/blue1"
    android:id="@+id/">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/blue2"
                android:id="@+id/blueBar"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frameLayout"
                android:layout_alignStart="@+id/frameLayout" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/elem1"
            android:focusableInTouchMode="false"
            android:layout_marginTop="40dp"
            android:background="@color/blue1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:background="@color/blue2"
                    android:padding="7dp"
                    android:src="@drawable/winter_100_fat"
                    android:layout_weight="20" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Clim salon"
                        android:id="@+id/textView7"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:textSize="15dp" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/seekBar"
                        android:layout_weight="50"
                        android:progress="32" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="32%"
                    android:id="@+id/textView8"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:background="@color/blue2"
                    android:padding="7dp"
                    android:src="@drawable/winter_100_thin"
                    android:layout_weight="20" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:weightSum="100" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Clim chambre"
                        android:id="@+id/textView9"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:textSize="15dp" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/seekBar2"
                        android:layout_weight="50"
                        android:progress="0" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0%"
                    android:id="@+id/textView10"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
