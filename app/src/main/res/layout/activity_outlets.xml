<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.remi.sugarmole.OutletsActivity"
    android:background="@color/blue1"
    android:id="@+id/">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/blue2"
                android:id="@+id/blueBar"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frameLayout"
                android:layout_alignStart="@+id/frameLayout" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/elem1"
            android:focusableInTouchMode="false"
            android:layout_marginTop="40dp"
            android:background="@color/blue1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:background="@color/blue2"
                    android:padding="7dp"
                    android:src="@drawable/electricity_100_fat"
                    android:layout_weight="20" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Prise TV"
                    android:id="@+id/textView15"
                    android:textSize="15dp"
                    android:layout_weight="80"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_marginBottom="7dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:background="@color/blue2"
                    android:padding="7dp"
                    android:src="@drawable/electricity_100_fat"
                    android:layout_weight="20" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Prise ordinateur"
                    android:id="@+id/textView16"
                    android:textSize="15dp"
                    android:layout_weight="80"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_marginBottom="7dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"
                    android:background="@color/blue2"
                    android:padding="7dp"
                    android:src="@drawable/electricity_100_fat"
                    android:layout_weight="20" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Prise grille-pain"
                    android:id="@+id/textView17"
                    android:textSize="15dp"
                    android:layout_weight="80"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_marginBottom="7dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView10"
                    android:background="@color/blue2"
                    android:padding="7dp"
                    android:src="@drawable/electricity_100_thin"
                    android:layout_weight="20" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Prise garage"
                    android:id="@+id/textView13"
                    android:textSize="15dp"
                    android:layout_weight="80"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
